---
extends: default

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  truthy: disable
  comments-indentation: disable
  comments: disable
  colons: disable
  indentation: disable
  trailing-spaces: disable

ignore: |
  .tox/
  .cache/
